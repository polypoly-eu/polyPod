{
  "name": "poly-look",
  "version": "0.0.0",
  "description": "Webcomponent poly-look following open-wc recommendations",
  "author": "poly-look",
  "license": "MIT",
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore && prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore && prettier \"**/*.js\" --write --ignore-path .gitignore",
    "test": "web-test-runner --coverage",
    "test:watch": "web-test-runner --watch",
    "storybook": "web-dev-server -c .storybook/server.mjs",
    "storybook:build": "build-storybook",
    "build": "rimraf *.bundled.js && rollup -c rollup.config.js"
  },
  "dependencies": {
    "@intcreator/markdown-element": "^0.3.3",
    "lit-element": "^2.5.1",
    "lit-html": "^1.4.1",
    "showdown": "^1.9.1"
  },
  "devDependencies": {
    "@polypoly-eu/eslint-config": "file:../../eslint-config",
    "@open-wc/testing": "^2.5.33",
    "@rollup/plugin-replace": "^2.4.2",
    "@web/dev-server": "^0.1.17",
    "@web/dev-server-storybook": "^0.3.5",
    "@web/test-runner": "^0.12.20",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.48.0",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2"
  },
  "prettier": {
    "singleQuote": false,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
