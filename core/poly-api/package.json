{
  "name": "@polypoly-eu/poly-api",
  "version": "0.7.2",
  "description": "Definitions, spec, and dummy implementation for the API of a Pod",
  "files": [
    "dist/*.js",
    "dist/*.d.ts"
  ],
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/polypoly-eu/polyPod.git"
  },
  "scripts": {
    "build": "rm -rf tsconfig.tsbuildinfo dist && tsc --emitDeclarationOnly && rollup -c",
    "dev": "tsc --watch --incremental",
    "eslint": "eslint src --ext .ts",
    "lint": "npm run eslint",
    "pretest": "start-dummy-server &",
    "test": "jest && ts-mocha src/**/*.test.ts",
    "posttest": "stop-dummy-server",
    "docs": "typedoc",
    "dev:docs": "chokidar 'src/**/*' -c 'npm run docs'"
  },
  "dependencies": {
    "@polypoly-eu/fetch-spec": "file:../fetch-spec",
    "@polypoly-eu/rdf": "file:../rdf",
    "@types/rdf-js": "^4.0.0"
  },
  "devDependencies": {
    "@polypoly-eu/dummy-server": "file:../dummy-server",
    "@polypoly-eu/eslint-config": "file:../../eslint-config",
    "@polypoly-eu/rdf-spec": "file:../rdf-spec",
    "@rdfjs/dataset": "^1.0.1",
    "@rollup/plugin-sucrase": "^3.1.0",
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.21",
    "@types/node-fetch": "^2.5.8",
    "@types/rdfjs__dataset": "^1.0.4",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chokidar-cli": "^2.1.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "fast-check": "^2.11.0",
    "jest": "^26.6.3",
    "memfs": "^3.2.0",
    "mocha": "^8.2.1",
    "node-fetch": "^2.6.1",
    "prettier": "^2.2.1",
    "rollup": "^2.37.0",
    "ts-jest": "^26.4.4",
    "ts-mocha": "^8.0.0",
    "typedoc": "^0.20.36",
    "typescript": "^4.0.5"
  },
  "peerDependencies": {
    "@polypoly-eu/rdf-spec": "*",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "fast-check": "^2.11.0"
  },
  "private": true
}
