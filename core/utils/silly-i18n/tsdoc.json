{
	"tags":
	{
		"allowUnknownTags" : true
	},
	"plugins":[
		 "plugins/markdown"
	],
	"opts":
	{
		"template"	:"./node_modules/tsdoc/template",
		"recurse"	:"true"
	},
	"templates" : {
		"cleverLinks"     : false,
		"monospaceLinks"  : false
	},
	"source":
	{
		"includePattern": "(\\.d)?\\.js$"
	},
	"markdown"  : {
		"parser"   : "gfm",
		"hardwrap" : true
	},
	"tsdoc":{
		"source"		:"./src/",
		"destination"	:"./docs",
		"tutorials"		:"",
		"systemName"	: "silly-i18n",
		"footer"		: "",
		"copyright"		: "silly-i18n Copyright Â© 2021 polypoly.",
		"outputSourceFiles" : true,
		"commentsOnly": true
	}
}
