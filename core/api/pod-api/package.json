    "@rollup/plugin-sucrase": "^3.1.0",
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/jest": "^27.0.2",
    "@types/node": "^14.14.21",
    "@types/node-fetch": "^2.5.8",
    "@types/rdfjs__dataset": "^1.0.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chokidar-cli": "^2.1.0",
    "eslint": "^7.18.0",
    "fast-check": "^2.11.0",
    "memfs": "^3.2.0",
    "node-fetch": "^2.6.1",
    "rollup": "^2.37.0",
    "typedoc": "^0.20.36",
    "typescript": "^4.0.5"
  },
  "peerDependencies": {
    "@polypoly-eu/rdf-spec": "*",
    "chai": "^4.2.0",
